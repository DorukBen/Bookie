<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.karambit.bookie.LocationActivity">

    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:alpha="0.48"
        android:src="@drawable/google_location_icon_16"
        android:tint="@color/primaryTextColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locationImage"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/locationImage"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:alpha="0.72"
            android:text="Select your location for getting better result from your book searchs. Other users can see your books location to get better results."
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/googleSearchLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.32"
                android:background="@color/primaryTextColor"/>

            <fragment
                android:id="@+id/place_autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.SupportPlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.32"
                android:background="@color/primaryTextColor"/>
        </LinearLayout>

        <Button
            android:id="@+id/locationOKButton"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:text="@string/ok"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"/>
    </LinearLayout>


</RelativeLayout>
