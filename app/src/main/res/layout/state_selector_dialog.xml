<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimary"
              android:padding="8dp"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/stateChangeContainer_1"
            style="?android:attr/actionButtonStyle"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/stateChangeImage_1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_book_timeline_opened_to_share_36dp"
                android:tint="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/stateChangeText_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="State change text 1"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stateChangeContainer_2"
            style="?android:attr/actionButtonStyle"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/stateChangeImage_2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_book_timeline_closed_to_share_36dp"
                android:tint="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/stateChangeText_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="State change text 2"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/cancelButton"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@android:string/cancel"
        android:textColor="@color/primaryTextColor"
        android:textColorHighlight="@color/colorAccent"
        />

</LinearLayout>