<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/phoneOwnerMessageRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:paddingLeft="84dp"
    android:paddingRight="16dp"
    android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/phoneOwnerMessageProfilePicture"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneOwnerMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/phoneOwnerCreatedAt"
                android:layout_weight="1"
                android:text="Phone owner message"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/phoneOwnerCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0"
                android:text="00:00"
                android:textSize="10sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.karambit.bookie.helper.CircleImageView
        android:id="@+id/phoneOwnerMessageProfilePicture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_36dp"/>


    <!--
            <View
                android:id="@+id/phoneOwnerMessageDivider"
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:background="@color/secondaryTextColor"
                android:layout_marginRight="8dp"/>
    -->


</RelativeLayout>