<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginTop="16dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/requestCountButton">


        <LinearLayout
            android:id="@+id/stateClickArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/bookStateImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bookmark_border_black_24dp"
                android:tint="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/bookStateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Reading"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"/>

        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/requestCountButton"
        android:background="@drawable/request_count_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:text="5"
        android:textStyle="bold"
        android:elevation="4dp"
        android:textColor="@color/colorPrimary"/>


</RelativeLayout>
