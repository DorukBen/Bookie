<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.karambit.bookie.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:id="@+id/infoTitleContainer_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infoDropDownImage_0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tint="@color/secondaryTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/requests"
                android:textAllCaps="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/infoContent_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:text="@string/request_info"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/infoTitleContainer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infoDropDownImage_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tint="@color/secondaryTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/transactions"
                android:textAllCaps="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/infoContent_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:text="@string/transaction_info"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/infoTitleContainer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infoDropDownImage_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tint="@color/secondaryTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/point"
                android:textAllCaps="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/infoContent_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:text="@string/point_info"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/infoTitleContainer_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infoDropDownImage_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tint="@color/secondaryTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/feedback"
                android:textAllCaps="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/infoContent_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:text="@string/feedback_info"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/infoTitleContainer_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infoDropDownImage_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tint="@color/secondaryTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="@string/who_are_we"
                android:textAllCaps="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/infoContent_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:text="@string/credit_info"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>
