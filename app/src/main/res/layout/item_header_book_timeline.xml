<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="16dp"
              android:paddingTop="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp">


        <com.karambit.bookie.helper.CircleImageView
            android:id="@+id/bookPictureHeaderCircleImageView"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:src="@drawable/placeholder_book"/>

        <TextView
            android:id="@+id/bookNameHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Book Name"
            android:textColor="@color/primaryTextColor"
            android:textSize="22sp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/authorHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Author"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/genreHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Genre"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"/>

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="128dp"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="36dp"-->
        <!--android:alpha="0.36"-->
        <!--android:background="@color/secondaryTextColor"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.karambit.bookie.helper.CircleImageView
            android:id="@+id/ownerPictureHeaderCircleImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:src="@drawable/placeholder_book"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/requestHeaderButton"
            android:layout_toRightOf="@id/ownerPictureHeaderCircleImageView"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ownerNameHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Owner Name"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/bookStateHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Book state"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/requestHeaderButton"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="REQUEST"
            android:textColor="@color/colorAccent"/>


    </RelativeLayout>

</LinearLayout>